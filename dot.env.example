
### general ###
ORIGIN='https://p3002.h.ccmp.jp'

### oauth2 ###
OAUTH2_CLIENT_ID=xxxx.apps.googleusercontent.com
OAUTH2_CLIENT_SECRET=XXXXX-YYYYYYY

OAUTH2_TOKEN_STORE='redis'
OAUTH2_TOKEN_REDIS_URL='redis://localhost:6379'
OAUTH2_SESSION_STORE='redis'
OAUTH2_SESSION_REDIS_URL='redis://localhost:6379'
OAUTH2_ROOT='/oauth2'

### passkey ###
# Storage type: memory, sqlite, postgres, or redis
PASSKEY_CHALLENGE_STORE=redis
PASSKEY_CREDENTIAL_STORE=redis

# Redis configuration (required if using redis)
PASSKEY_CHALLENGE_REDIS_URL=redis://localhost:6379
PASSKEY_CREDENTIAL_REDIS_URL=redis://localhost:6379

# PostgreSQL configuration (required if using postgres)
PASSKEY_CHALLENGE_POSTGRES_URL=postgresql://passkey:passkey@localhost:5432/passkey
PASSKEY_CREDENTIAL_POSTGRES_URL=postgresql://passkey:passkey@localhost:5432/passkey

# SQLite configuration (optional, defaults to ./db/sqlite/data/data.db)
PASSKEY_CHALLENGE_SQLITE_URL=sqlite:./db/sqlite/data/data.db
PASSKEY_CREDENTIAL_SQLITE_URL=sqlite:./db/sqlite/data/data.db

### user db ###
USER_DB_STORE='redis'
USER_DB_REDIS_URL='redis://localhost:6379'
